        "\n",
        "@model function logreg_turing(x, y, σ_prior)\n",
        "    n, p = size(x)\n",
        "    \n",
        "    # 事前分布\n",
        "    β ~ MvNormal(zeros(p), (σ_prior^2) * I)\n",
        "    \n",
        "    # ベクトル化した尤度（高速化）\n",
        "    η = x * β\n",
        "    y ~ arraydist(Bernoulli.(logistic.(η)))\n",
        "end\n",
        "\n",
        "model = logreg_turing(X, y, σ_prior)"
