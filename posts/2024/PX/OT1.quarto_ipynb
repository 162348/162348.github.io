        "#| outputId: e7ad5225-5ac8-42bd-b442-1b48fdbb8fd9\n",
        "# generate points\n",
        "n = 5\n",
        "x = np.arange(0, 2*n, 2) + .25 * np.random.normal(size=(n,))\n",
        "a = np.ones(n) / n\n",
